package OOP_work1 ;

class game_test {
    public int p1win ;
    public int p2win ;
    public int draw ;
    public game_test () {
        p1win = 0 ;
        p2win = 0 ;
        draw = 0 ;
    }

    public void compare( int p1num1, int p2num1, int p1num2, int p2num2 ) {
        if ( p1num1 > p2num1 ) {
            p1win++ ;
        }
        else if ( p1num1 < p2num1 ) {
            p2win++ ;
        }
        else {
            if ( p1num2 > p2num2 ) {
                p1win++ ;
            }
            else if ( p1num2 < p2num2 ) {
                p2win++ ;
            }
            else {
              draw++ ;
            } // else
        } // else 
    } // compare()

    public void PrintAns() {
      System.out.println( "Tom Win：" + p1win ) ;
      System.out.println( "Mary Win：" + p2win ) ;
      System.out.println( "Draw﹕：" + draw ) ;
    } // PrintAns()

    public static void main( String[] args ) {
        game_test test = new game_test() ;
        test.compare( 8, 8, 7, 5 ) ;
        test.compare( 8, 8, 5, 5 ) ;
        test.compare( 7, 8, 7, 5 ) ;
        test.PrintAns() ;
      } // main
} // testcode1()
